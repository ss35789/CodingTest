import java.util.Arrays;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // 입력 받기
        int N = sc.nextInt();
        int L = sc.nextInt();
        int[] leaks = new int[N];

        for (int i = 0; i < N; i++) {
            leaks[i] = sc.nextInt();
        }

        // 물이 새는 위치 정렬
        Arrays.sort(leaks);

        int count = 0;
        int i = 0;

        while (i < N) {
            // 테이프를 붙일 시작 위치
            int start = leaks[i];
            count++;

            // 테이프의 끝 범위까지 커버되는 물 새는 위치 찾기
            while (i < N && leaks[i] < start + L) {
                i++;
            }
        }

        // 필요한 테이프의 최소 개수 출력
        System.out.println(count);

        sc.close();
    }
}
